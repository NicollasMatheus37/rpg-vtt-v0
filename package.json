{
  "name": "electron-ts-app",
  "version": "1.0.0",
  "description": "Minimal Electron + TypeScript app",
  "main": "dist/main.js",
  "scripts": {
    "copy:assets": "cpx \"src/renderer/*.html\" dist/renderer",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && npm run build:main",
    "start": "npm run build && electron .",
    "dev": "concurrently \"vite\" \"tsc -w\" \"electron .\""
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^8.2.0",
    "cpx": "^1.5.0",
    "daisyui": "^5.5.0",
    "electron": "^39.1.2",
    "typescript": "^5.6.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "konva": "^10.0.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-konva": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0"
  }
}
